{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "category": "nucleus",
    "title": "Link",
    "entity": "link",
    "type": "object",
    "format": "grid",
    "properties": {
        "name": {
            "type": "string",
            "enum": [ "link" ],
            "options": {
                "hidden": true
            }
        },
        "linktext": {
            "title": "Link text",
            "type": "string",
            "default": "Link text",
            "options": {
                "grid_columns": 4
            }
        },
        "linkhref": {
            "title": "Link URL",
            "type": "string",
            "format": "url",
            "default": "#",
            "options": {
                "grid_columns": 4
            }
        },
        "linktitle": {
            "title": "Title attribute",
            "description": "Shown on mouseover.",
            "type": "string",
            "options": {
                "grid_columns": 4
            }
        },
        "linktarget": {
            "title": "Target",
            "description": "Strongly recommend against - uses _blank to open links in a new window.",
            "type": "string",
            "enum": [ "_self" ],
            "options": {
                "hidden": true
            }
        }
    },
    "required": [ "linkhref" ]
}
